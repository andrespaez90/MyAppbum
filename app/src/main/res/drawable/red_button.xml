<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/primary_dark"
                android:endColor="@color/primary_dark"
                android:angle="270" />

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ffff4646"
                android:endColor="#ffff4646"
                android:angle="270" />
            <stroke
                android:color="@color/strokePrimaryDark"
                android:width="5dp"/>
        </shape>
    </item>
</selector>
