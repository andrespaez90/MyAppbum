<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/bg_start"
    tools:context="com.dev.innso.myappbum.UI.StartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/startlayout_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/start_bgtitle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="152dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_icon"
                android:layout_marginBottom="10dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/app_name"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/by"
            android:id="@+id/textView2"
            android:layout_marginTop="-50dp"

            android:layout_below="@+id/startlayout_img"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.2"
        android:weightSum="1">

        <Button
            android:id="@+id/start_access"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/access"
            android:textSize="25dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:background="@drawable/orange_button"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>


        <com.facebook.login.widget.LoginButton
            android:id="@+id/star_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textSize="25dp"
            android:gravity="center|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

</LinearLayout>
