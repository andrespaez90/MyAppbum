<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_transparecy85"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="15dp"
    android:weightSum="3">

    <TextView
        android:id="@+id/button_addPicture_fromGallery"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_gallery"
        android:gravity="center_horizontal"
        android:text="@string/action_gallery"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/button_addPicture_fromCamera"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_camera"
        android:gravity="center_horizontal"
        android:text="@string/action_gallery"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


    <TextView
        android:id="@+id/button_addPicture_fromWeb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@mipmap/ic_at"
        android:gravity="center_horizontal"
        android:text="@string/action_gallery"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</LinearLayout>
