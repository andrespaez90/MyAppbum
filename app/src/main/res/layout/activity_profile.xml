<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dev.innso.myappbum.ui.ProfileActivity"
    android:weightSum="2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        style="@style/Toolbar">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/arrow_back"
            android:layout_marginLeft="@dimen/header_margin_back_left"
            android:layout_marginRight="@dimen/header_margin_back_right"
            ></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            style="@style/Toolbar.Title"
            android:text="@string/title_activity_profile"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/profile_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_bg"
            android:layout_marginBottom="0dp"
            android:scaleType="centerCrop" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile"
            app:border_width="1dp"
            app:border_color="#FF000000"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="39dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/profile_name"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"
            android:background="@color/orange_transparecy65" />

    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orangeButton"/>

</LinearLayout>