<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.dev.innso.myappbum.UI.Fragments.AppbumsFragment"
    android:background="@color/primary_material_light"
    android:weightSum="1">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dim_foreground_disabled_material_dark"
        android:layout_marginBottom="12dp"
        android:layout_weight="0.9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/main_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_account_plus"
            android:text="Crear Appbum"
            android:paddingLeft="6dp"
            android:background="@color/apptheme_color"
            android:textColor="@color/background_material_light"/>
    </LinearLayout>


</LinearLayout>
