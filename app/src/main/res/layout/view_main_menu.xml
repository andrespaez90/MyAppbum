<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/menu_imgmenu"
            style="@style/Toolbar.MenuImage"
            android:layout_marginLeft="@dimen/header_margin_back_left"
            android:layout_marginStart="@dimen/header_margin_back_left"
            android:src="@mipmap/ic_menu_90"
            android:contentDescription="@string/app_name"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/main_menu_prfile"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@color/orangeButton"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/spacing_medium"
        android:paddingRight="@dimen/spacing_medium"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/main_menu_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_account_circle_white_24dp"
            android:drawableStart="@mipmap/ic_account_circle_white_24dp"
            android:gravity="center_vertical"
            android:text="@string/title_activity_profile"
            android:layout_marginBottom="@dimen/spacing_small"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/main_menu_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_chat_bubble_white_24dp"
            android:drawableStart="@mipmap/ic_chat_bubble_white_24dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_small"
            android:text="@string/copy.notifications"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/main_menu_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_mail_white_24dp"
            android:drawableStart="@mipmap/ic_mail_white_24dp"
            android:layout_marginBottom="@dimen/spacing_small"
            android:gravity="center_vertical"
            android:text="@string/copy.Invitations"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/main_menu_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_adb_white_24dp"
            android:drawableStart="@mipmap/ic_adb_white_24dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_small"
            android:text="@string/copy.name_developer"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="@color/white" />

        <TextView
            android:id="@+id/main_menu_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_power"
            android:drawableStart="@mipmap/ic_power"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="Cerrar SesiÃ³n"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
